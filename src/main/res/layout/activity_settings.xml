<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="40sp"
    tools:context=".activities.Settings">

    <TextView
        android:id="@+id/choose"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="34dp"
        android:text="Choose a level "
        android:textStyle="bold"
        android:textSize="40sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="4dp"
        android:layout_marginTop="113dp"
        android:stretchColumns="*"
        android:weightSum="2">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="5sp">

            <ImageButton
                android:id="@+id/easy"
                android:layout_width="43dp"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/easy" />

            <ImageButton
                android:id="@+id/medium"
                android:layout_width="19dp"
                android:layout_height="74dp"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/medium" />

            <ImageButton
                android:id="@+id/hard"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/hard" />


        </TableRow>

    </TableLayout>

    <TextView
        android:id="@+id/diffiText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/choose"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="183dp"
        android:text="@string/difficultyLevelText"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/backSelectDiff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diffiText"
        android:layout_alignStart="@+id/diffiText"
        android:layout_marginStart="-130dp"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/back" />
</RelativeLayout>