<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".activities.SelectDifficultyPage2">

    <TextView
        android:id="@+id/select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="-70dp"
        android:layout_marginBottom="156dp"
        android:rotation="270"
        android:layout_marginLeft="-10sp"
        android:text="Set difficulty"
        android:textSize="30sp" />

    <TableLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_marginStart="64dp"
        android:layout_marginTop="0dp"
        android:stretchColumns="*"
        android:weightSum="3">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:gravity="start"
            android:padding="10sp">


            <ImageButton
                android:id="@+id/alphabetsDiff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"

                android:scaleType="fitCenter"
                app:srcCompat="@drawable/alphabets" />

            <ImageButton
                android:id="@+id/wordsDiff"

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/words" />

            <ImageButton
                android:id="@+id/sentencesDiff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/sentences" />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10sp">

            <ImageButton
                android:id="@+id/poemsDiff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/poems" />

            <ImageButton
                android:id="@+id/colorsDiff"
                android:layout_width="204dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/colors" />

            <ImageButton
                android:id="@+id/mannersDiff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/manners" />

        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="10sp">


            <ImageButton
                android:id="@+id/numbersDiff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/numbers" />

            <ImageButton
                android:id="@+id/specialeditionDiff"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/specialedition" />


            <ImageButton
                android:id="@+id/startbutton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:scaleType="fitCenter"
                app:srcCompat="@drawable/placeholder" />


        </TableRow>
    </TableLayout>


</RelativeLayout>